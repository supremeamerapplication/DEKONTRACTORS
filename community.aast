            padding: 0 20px;
        }

        /* ===== HEADER ===== */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            z-index: 1000;
            padding: 20px 0;
            box-shadow: 0 2px 20px rgba(10, 36, 99, 0.1);
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .logo-image {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #0A2463 0%, #3E7BFA 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 5px;
        }

        .logo-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .logo-text h1 {
            font-size: 1.5rem;
            font-weight: 800;
            color: #0A2463;
            line-height: 1.2;
        }

        .logo-text span {
            font-size: 0.7rem;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .back-to-main {
            background: linear-gradient(135deg, #FFB400 0%, #FFE566 100%);
            color: #1e293b;
            border: none;
            padding: 10px 24px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .back-to-main:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 180, 0, 0.3);
        }

        /* ===== HERO SECTION ===== */
        .hero {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(10, 36, 99, 0.95), rgba(62, 123, 250, 0.85)),
                        url('https://images.unsplash.com/photo-1545324418-cc1a3fa10c00?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: white;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 20%, rgba(255, 180, 0, 0.2) 0%, transparent 70%);
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 900px;
            margin: 0 auto;
        }

        .coming-soon-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            letter-spacing: 2px;
            margin-bottom: 30px;
            text-transform: uppercase;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(255, 255, 255, 0); }
            100% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
        }

        .hero h1 {
            font-size: 4rem;
            font-weight: 900;
            margin-bottom: 20px;
            line-height: 1.1;
            background: linear-gradient(135deg, #FFFFFF 0%, #FFE566 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 40px;
            opacity: 0.9;
        }

        /* ===== VISION SECTION ===== */
        .vision-section {
            padding: 100px 0;
            background: white;
        }

        .section-title {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-title h2 {
            font-size: 2.8rem;
            color: #0A2463;
            margin-bottom: 15px;
            font-weight: 800;
        }

        .section-title p {
            font-size: 1.2rem;
            color: #64748b;
            max-width: 600px;
            margin: 0 auto;
        }

        .vision-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
        }

        .vision-card {
            background: #f8fafc;
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            transition: transform 0.3s;
            border: 1px solid #e2e8f0;
        }

        .vision-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(10, 36, 99, 0.1);
            border-color: #3E7BFA;
        }

        .vision-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #0A2463 0%, #3E7BFA 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            color: white;
            font-size: 2rem;
        }

        .vision-card h3 {
            font-size: 1.5rem;
            color: #0A2463;
            margin-bottom: 15px;
        }

        .vision-card p {
            color: #64748b;
            line-height: 1.7;
        }

        /* ===== COMMUNITY FEATURES ===== */
